<SCENE>

  <!-- Initial values -->
  <INITIALS>
    <frustum near="0.1" far="500"/>
    <translation x="-1" y="1" z="0" />
    <rotation axis="x" angle="0" />
    <rotation axis="y" angle="0" />
    <rotation axis="z" angle="0" />
    <scale sx="0.25" sy="0.25" sz="0.25" />
    <reference length="50" />
  </INITIALS>


  <!-- Illumination and clear colour -->
  <ILLUMINATION>
    <ambient r="0.2" g="0.2" b="0.2" a="1" />
    <background r="0" g="0" b="0" a="1" />
  </ILLUMINATION>


  <!-- Lights -->
  <LIGHTS>
    <LIGHT id="light0">
      <enable value ="1" />
      <position  x="0" y="10" z="0" w="1" />
      <ambient r="0.2" g="0.2" b="0.2" a="1.0" />
      <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
      <specular r="1.0" g="1.0" b="1.0" a="1.0" />
    </LIGHT>

    <LIGHT id="light1">
      <enable value ="1" />
      <position x="30" y="10" z="0" w="1" />
      <ambient r="0.2" g="0.2" b="0.2" a="1.0" />
      <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
      <specular r="1.0" g="1.0" b="1.0" a="1.0" />
    </LIGHT>

    <LIGHT id="light2">
      <enable value ="1" />
      <position x="0" y="10" z="20" w="1" />
      <ambient r="0.2" g="0.2" b="0.2" a="1.0" />
      <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
      <specular r="1.0" g="1.0" b="1.0" a="1.0" />
    </LIGHT>

    <LIGHT id="light3">
      <enable value ="1" />
      <position x="30" y="10" z="20" w="1" />
      <ambient r="0.2" g="0.2" b="0.2" a="1.0" />
      <diffuse r="0.6" g="0.6" b="0.6" a="1.0" />
      <specular r="0.6" g="0.6" b="0.6" a="1.0" />
    </LIGHT>

  </LIGHTS>

  <!-- Textures -->
  <TEXTURES>
    <!-- Tree trunk -->
    <TEXTURE id="trunk">
      <file path="images/trunk-image.jpg" />
      <amplif_factor s="2" t="2" />
    </TEXTURE>

</TEXTURES>

<MATERIALS>
  <!-- A default material -->
  <MATERIAL id="defaultMaterial">
    <shininess value="1" />
    <specular r="0.0" g="0.0" b="0.0" a="1" />
    <diffuse r="0.4" g="0.4" b="0.4" a="1" />
    <ambient r="0.4" g="0.4" b="0.4" a="1" />
    <emission r="0.0" g="0.0" b="0.0" a="1" />
  </MATERIAL>
</MATERIALS>


<ANIMATIONS>
  <ANIMATION id="1" speed="2" type="linear">
    <controlpoint xx="0" yy="0" zz="0" />
    <controlpoint xx="5" yy="0" zz="0" />
    <controlpoint xx="5" yy="0" zz="5" />
    <controlpoint xx="0" yy="0" zz="5" />

  </ANIMATION>
  <ANIMATION id="2" speed="1" type="circular"
    centerx="0" centery="0" centerz="0"
    radius="3" startang="20" rotang="60">
  </ANIMATION>
  <ANIMATION id="3" speed="1" type="bezier">
    <controlpoint xx="0" yy="0" zz="0" />
    <controlpoint xx="2" yy="0" zz="2" />
    <controlpoint xx="4" yy="0" zz="4" />
    <controlpoint xx="1" yy="0" zz="6" />
  </ANIMATION>
  <ANIMATION id="4" type="combo">
    <SPANREF id="2" />
    <SPANREF id="1" />
  </ANIMATION>
</ANIMATIONS>

<!-- The leaves -->
<LEAVES>
</LEAVES>


<!-- The nodes -->
<NODES>

  <ROOT id="root" />

  <!-- The root node -->
  <NODE id="root">
    <MATERIAL id="defaultMaterial" />
    <TEXTURE id="null" />

    <DESCENDANTS>

      <!-- <NODEREF id="luzes" /> -->
      <NODEREF id="chao" />
    </DESCENDANTS>

  </NODE>


  <!-- The floor -->
  <NODE id="chao">
    <MATERIAL id="null" />
    <TEXTURE id="null" />

    <SCALE sx="6" sy="1" sz="8" />
    <TRANSLATION x="0" y="0" z="4" />
    <ROTATION axis="x" angle="-90" />

    <DESCENDANTS>
      <LEAF  type="rectangle" args="0 10 10 0" />
    </DESCENDANTS>

  </NODE>

  <NODE id="cubo">
    <MATERIAL id="null" />
    <TEXTURE id="null" />

    <DESCENDANTS>
      <NODEREF id="faceCubo1" />
      <NODEREF id="faceCubo2" />
      <NODEREF id="faceCubo3" />
      <NODEREF id="faceCubo4" />
      <NODEREF id="faceCubo5" />
      <NODEREF id="faceCubo6" />
    </DESCENDANTS>

  </NODE>

  <!-- A cube face -->
  <NODE id="faceCubo1">
    <MATERIAL id="null" />
    <TEXTURE id="null" />

    <TRANSLATION x="-0.5" y="-0.5" z="0.5" />

    <DESCENDANTS>
      <LEAF  type="rectangle" args="0 1 1 0" />
    </DESCENDANTS>

  </NODE>

  <!-- Another cube face -->
  <NODE id="faceCubo2">
    <MATERIAL id="null" />
    <TEXTURE id="null" />

    <TRANSLATION x="-0.5" y="-0.5" z="-0.5" />
    <ROTATION axis="y" angle="-90" />

    <DESCENDANTS>
      <LEAF  type="rectangle" args="0 1 1 0" />
    </DESCENDANTS>

  </NODE>

  <!-- Another cube face -->
  <NODE id="faceCubo3">
    <MATERIAL id="null" />
    <TEXTURE id="null" />

    <TRANSLATION x="0.5" y="-0.5" z="0.5" />
    <ROTATION axis="y" angle="90" />

    <DESCENDANTS>
      <LEAF  type="rectangle" args="0 1 1 0" />
    </DESCENDANTS>

  </NODE>

  <!-- Another cube face -->
  <NODE id="faceCubo4">
    <MATERIAL id="null" />
    <TEXTURE id="null" />

    <TRANSLATION x="0.5" y="-0.5" z="-0.5" />
    <ROTATION axis="y" angle="180" />

    <DESCENDANTS>
      <LEAF  type="rectangle" args="0 1 1 0" />
    </DESCENDANTS>

  </NODE>

  <!-- Another cube face -->
  <NODE id="faceCubo5">
    <MATERIAL id="null" />
    <TEXTURE id="null" />

    <TRANSLATION x="-0.5" y="0.5" z="0.5" />
    <ROTATION axis="x" angle="-90" />

    <DESCENDANTS>
      <LEAF  type="rectangle" args="0 1 1 0" />
    </DESCENDANTS>

  </NODE>

  <!-- Another cube face -->
  <NODE id="faceCubo6">
    <MATERIAL id="null" />
    <TEXTURE id="null" />

    <TRANSLATION x="-0.5" y="-0.5" z="-0.5" />
    <ROTATION axis="x" angle="90" />

    <DESCENDANTS>
      <LEAF  type="rectangle" args="0 1 1 0" />
    </DESCENDANTS>

  </NODE>

  <NODE id="prisma_triangular">
    <MATERIAL id="null" />
    <TEXTURE id="null" />

    <DESCENDANTS>
      <NODEREF id="faceRetangulo1" />
      <NODEREF id="faceRetangulo2" />
      <NODEREF id="faceRetangulo3" />
      <NODEREF id="faceTriangulo1" />
      <NODEREF id="faceTriangulo2" />
    </DESCENDANTS>

  </NODE>

  <NODE id="faceRetangulo1">
    <MATERIAL id="null" />
    <TEXTURE id="null" />

    <TRANSLATION x="-1" y="0" z="1" />
    <ROTATION axis="x" angle="-45" />

    <DESCENDANTS>
      <LEAF  type="rectangle" args="0 1.4142 2 0" />
    </DESCENDANTS>

  </NODE>

  <NODE id="faceRetangulo2">
    <MATERIAL id="null" />
    <TEXTURE id="null" />

    <TRANSLATION x="-1" y="1" z="0" />
    <ROTATION axis="x" angle="-135" />

    <DESCENDANTS>
      <LEAF  type="rectangle" args="0 1.4142 2 0" />
    </DESCENDANTS>

  </NODE>

  <NODE id="faceRetangulo3">
    <MATERIAL id="null" />
    <TEXTURE id="null" />

    <TRANSLATION x="-1" y="0" z="-1" />
    <ROTATION axis="x" angle="90" />

    <DESCENDANTS>
      <LEAF  type="rectangle" args="0 2 2 0" />
    </DESCENDANTS>

  </NODE>

  <NODE id="faceTriangulo1">
    <MATERIAL id="null" />
    <TEXTURE id="null" />

    <TRANSLATION x="1" y="0" z="1" />
    <ROTATION axis="y" angle="90" />

    <DESCENDANTS>
      <LEAF  type="triangle" args="0 0 0 2 0 0 1 1 0" />
    </DESCENDANTS>

  </NODE>

  <NODE id="faceTriangulo2">
    <MATERIAL id="null" />
    <TEXTURE id="null" />

    <TRANSLATION x="-1" y="0" z="-1" />
    <ROTATION axis="y" angle="-90" />

    <DESCENDANTS>
      <LEAF  type="triangle" args="0 0 0 2 0 0 1 1 0" />
    </DESCENDANTS>

  </NODE>


</NODES>

</SCENE>
